#!/boot/rc

#start standard fossil setup

if(! ~ $venti ?*){
	echo please set venti env variable as needed
	echo if unneeded for this fossil set to junk value
	exit
}
fossil -c 'srv -p fscons'
echo 'fsys main config /dev/sdC0/fossil' >>/srv/fscons
echo 'fsys main open  -c 9000' >>/srv/fscons
echo 'fsys main snaptime -s 60 -a 0500 -t 2880' >>/srv/fscons
echo 'srv -A fossilsrv' >>/srv/fscons
echo 'listen tcp!*!564' >>/srv/fscons
