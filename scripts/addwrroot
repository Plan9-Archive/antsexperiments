#!/bin/rc
# mounts a fileserver and binds dirs to use it

if (! ~ $1 ?*){
	echo usage: addwrroot TARGETSYSTEM
	exit usage
}
if(! test -e /srv/$1){
	srv tcp!$1!564 $1
}
mount -c /srv/$1 /n/$1
bind -a /n/$1/ /
bind -b /n/$1/$objtype/bin /bin
bind -b /n/$1/rc/bin /bin
bind -b /n/$1/sys /sys
bind -b /n/$1/lib/ /lib/
bind -bc /n/$1/usr /usr
bind -bc /n/$1/$home $home
bind -bc /n/$1/$home/tmp /tmp
bind -bc /n/$1/$home/bin/$objtype /bin
bind -bc /n/$1/$home/bin/rc /bin
exit ''
